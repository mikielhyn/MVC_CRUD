@model IEnumerable<MVC_CRUD.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All Enrollees";
}

<h4>All Enrollees</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Citizenship</th>
            <th>Contact No.</th>
            <th>Course</th>
            <th>Year</th>
            <th>Campus</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model) 
        { 
        <tr>
            <td>@user.StudentCode</td>
            <td>@user.FirstName</td>
            <td>@user.MiddleName</td>
            <td>@user.LastName</td>
            <td>@user.Age</td>
            <td>@user.Address</td>
            <td>@user.Citizenship</td>
            <td>@user.Contact</td>
            <td>@user.Course</td>
            <td>@user.Year</td>
            <td>@user.Campus</td>
            <td><a asp-action="edit" asp-route-id="@user.StudentCode" class="text-info">Edit </a></td>
            <td><a asp-action="delete" asp-route-id="@user.StudentCode" class="text-danger">Delete </a></td>
        </tr>
        }
    </tbody>
</table>